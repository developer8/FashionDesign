<?xml version="1.0" encoding="utf-8"?><android.support.design.widget.CoordinatorLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/coordinator_layout"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#ffffff"        android:orientation="vertical"        tools:context=".EditProfile"        >        <include layout="@layout/toolbar"/>        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:scrollbars="none"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                android:padding="10dp"                >                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/first_name"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/first_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="15dp"                    android:background="@drawable/rectangular_background"                    android:inputType="text"                    android:padding="10dp"                    android:textSize="12sp"                    />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/last_name"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/last_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="15dp"                    android:background="@drawable/rectangular_background"                    android:inputType="text"                    android:padding="10dp"                    android:textSize="12sp"                    />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/address_line_one"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/address_line_one"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="15dp"                    android:background="@drawable/rectangular_background"                    android:inputType="text"                    android:padding="10dp"                    android:textSize="12sp"                    />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/address_line_two"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/address_line_two"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="15dp"                    android:background="@drawable/rectangular_background"                    android:inputType="text"                    android:padding="10dp"                    android:textSize="12sp"                    />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/city"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/city"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="15dp"                    android:background="@drawable/rectangular_background"                    android:inputType="textEmailAddress"                    android:padding="10dp"                    android:textSize="12sp"                    />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/post_code"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/postcode"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="15dp"                    android:background="@drawable/rectangular_background"                    android:inputType="phone"                    android:padding="10dp"                    android:textSize="12sp"                    />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="3dp"                    android:text="@string/country"                    android:textColor="#54626c"                    android:textSize="14sp"                    android:textStyle="bold"                    />                <EditText                    android:id="@+id/country"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="@drawable/rectangular_background"                    android:inputType="text"                    android:padding="10dp"                    android:textSize="12sp"                    />            </LinearLayout>        </ScrollView>    </LinearLayout></android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:layout_width="match_parent"              android:layout_height="match_parent"              android:orientation="vertical"              android:padding="10dp">    <RelativeLayout        android:id="@+id/seller_parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="15dp"        >        <FrameLayout            android:id="@+id/profile_image_parent"            android:layout_width="35dp"            android:layout_height="35dp"            android:layout_gravity="center"            android:background="@drawable/rounded_border">            <de.hdodenhof.circleimageview.CircleImageView                android:id="@+id/avatar"                android:layout_width="35dp"                android:layout_height="35dp"                android:layout_gravity="center"                />        </FrameLayout>        <TextView            android:id="@+id/seller_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_toRightOf="@+id/profile_image_parent"            android:paddingLeft="10dp"            android:paddingRight="10dp"            android:textColor="#54626c"            android:textSize="15sp"            />    </RelativeLayout>    <TextView        android:id="@+id/title"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="5dp"        android:textColor="@color/colorPrimary"        android:textSize="15sp"        />    <TextView        android:id="@+id/rules"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="12sp"        android:layout_marginBottom="5dp"        android:textColor="#b3555555"        />    <ImageView        android:id="@+id/shop_image"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="5dp"        android:background="#b3eeeeee"        />    <ScrollView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:scrollbars="none"        >        <TextView            android:id="@+id/description"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginBottom="5dp"            android:textColor="#b3555555"            android:textSize="12sp"            />    </ScrollView>    <TextView        android:id="@+id/url"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="5dp"        android:autoLink="web"        android:textColorLink="#3c8dbc"        android:textSize="12sp"        android:visibility="gone"        /></LinearLayout>
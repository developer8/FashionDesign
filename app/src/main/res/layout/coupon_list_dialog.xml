<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:layout_width="match_parent"              android:layout_height="match_parent"              android:orientation="vertical">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="2dp"        android:background="#ffffff"        android:padding="10dp"        android:text="@string/coupon_codes"        android:textColor="#54626c"        android:textSize="15sp"        android:textStyle="bold"        />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="#b3d3d3d3"        />    <android.support.v7.widget.RecyclerView        android:id="@+id/coupon_list"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:layout_marginTop="2dp"        />    <Button        android:id="@+id/ok"        android:layout_width="wrap_content"        android:layout_height="35dp"        android:layout_gravity="center"        android:layout_marginBottom="20dp"        android:layout_marginTop="20dp"        android:background="@drawable/rounded_button"        android:paddingLeft="80dp"        android:paddingRight="80dp"        android:text="@string/dialog_ok"        android:textColor="#f2f2f2"        android:textSize="12sp"        android:textStyle="bold"        /></LinearLayout>
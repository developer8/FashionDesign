<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView    android:id="@+id/parent_card"    xmlns:tools="http://schemas.android.com/tools"    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:background="#ffffff"    app:cardElevation="2dp"    ><LinearLayout    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#ffffff"    android:orientation="horizontal"    tools:context="com.fashion.binge.fashiondesign.OrderDetailActivity">    <ImageView        android:id="@+id/status_image"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:adjustViewBounds="true"        android:padding="10dp"        />    <TextView        android:id="@+id/status"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:gravity="center_vertical"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:textSize="15sp"        android:textStyle="bold"        /></LinearLayout></android.support.v7.widget.CardView>
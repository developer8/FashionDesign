<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.fashion.binge.fashiondesign.MyAccount">    <include layout="@layout/toolbar"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#f8f9fb"        android:padding="10dp"        android:text="@string/account"        android:textColor="#909090"        android:textSize="14sp"        android:textStyle="bold"        />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="#b3dddddd"        />    <LinearLayout        android:id="@+id/edit_profile_parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:adjustViewBounds="true"            android:contentDescription="@string/_100"            android:maxHeight="45dp"            android:padding="10dp"            android:src="@mipmap/ic_profile_account"            android:tint="@color/colorPrimary"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:orientation="horizontal"                android:padding="8dp"                >                <TextView                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="#f8f9fb"                    android:padding="10dp"                    android:text="@string/edit_profile"                    android:textColor="#302d2d"                    android:textSize="15sp"                    />                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:contentDescription="@string/_100"                    android:maxHeight="18dp"                    android:src="@mipmap/arrow"                    />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:background="#b3dddddd"                />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/address_parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:adjustViewBounds="true"            android:contentDescription="@string/_100"            android:maxHeight="45dp"            android:padding="10dp"            android:src="@mipmap/ic_address_account"            android:tint="@color/colorPrimary"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:orientation="horizontal"                android:padding="8dp"                >                <TextView                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="#f8f9fb"                    android:padding="10dp"                    android:text="@string/address"                    android:textColor="#302d2d"                    android:textSize="15sp"                    />                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:contentDescription="@string/_100"                    android:maxHeight="18dp"                    android:src="@mipmap/arrow"                    />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:background="#b3dddddd"                />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/change_password_parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:adjustViewBounds="true"            android:contentDescription="@string/_100"            android:maxHeight="45dp"            android:padding="10dp"            android:src="@mipmap/ic_password_account"            android:tint="@color/colorPrimary"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:orientation="horizontal"                android:padding="8dp"                >                <TextView                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="#f8f9fb"                    android:padding="10dp"                    android:text="@string/change_password"                    android:textColor="#302d2d"                    android:textSize="15sp"                    />                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:contentDescription="@string/_100"                    android:maxHeight="18dp"                    android:src="@mipmap/arrow"                    />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:background="#b3dddddd"                />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/logout_parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:adjustViewBounds="true"            android:contentDescription="@string/_100"            android:maxHeight="45dp"            android:padding="10dp"            android:src="@mipmap/ic_logout_account"            android:tint="@color/colorPrimary"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:orientation="horizontal"                android:padding="8dp"                >                <TextView                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="#f8f9fb"                    android:padding="10dp"                    android:text="@string/logout"                    android:textColor="#302d2d"                    android:textSize="15sp"                    />                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:contentDescription="@string/_100"                    android:maxHeight="18dp"                    android:src="@mipmap/arrow"                    />            </LinearLayout>        </LinearLayout>    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="#b3dddddd"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#f8f9fb"        android:padding="10dp"        android:text="@string/connect_with_us"        android:textColor="#909090"        android:textSize="14sp"        android:textStyle="bold"        />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="#b3dddddd"        />    <LinearLayout        android:id="@+id/facebook"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:adjustViewBounds="true"            android:contentDescription="@string/_100"            android:maxHeight="45dp"            android:padding="10dp"            android:src="@mipmap/fb"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:orientation="horizontal"                android:padding="8dp"                >                <TextView                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="#f8f9fb"                    android:padding="10dp"                    android:text="@string/like_on_facebook"                    android:textColor="#302d2d"                    android:textSize="15sp"                    />                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:contentDescription="@string/_100"                    android:maxHeight="18dp"                    android:src="@mipmap/arrow"                    />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:background="#b3dddddd"                />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/instagram"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:orientation="horizontal"        >        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:adjustViewBounds="true"            android:contentDescription="@string/_100"            android:maxHeight="45dp"            android:padding="10dp"            android:src="@mipmap/instagram"            />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:orientation="horizontal"                android:padding="8dp"                >                <TextView                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="#f8f9fb"                    android:padding="10dp"                    android:text="@string/follow_us_on_instagram"                    android:textColor="#302d2d"                    android:textSize="15sp"                    />                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:contentDescription="@string/_100"                    android:maxHeight="18dp"                    android:src="@mipmap/arrow"                    />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:background="#b3dddddd"                />        </LinearLayout>    </LinearLayout></LinearLayout>
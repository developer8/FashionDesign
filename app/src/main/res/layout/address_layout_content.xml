<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              xmlns:app="http://schemas.android.com/apk/res-auto"              android:id="@+id/parent"              android:layout_width="match_parent"              android:layout_height="match_parent"              android:orientation="horizontal">    <android.support.v7.widget.AppCompatRadioButton        android:id="@+id/radio"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        app:buttonTint="#F66D63"        android:checked="false"        android:layout_marginBottom="15dp"        android:layout_marginTop="15dp"        android:text="Address 1"        android:textColor="#54626c"/>    <TextView        android:id="@+id/price"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:paddingRight="5dp"        android:layout_marginBottom="15dp"        android:layout_marginTop="15dp"        android:textColor="#54626c"        android:textStyle="bold"        /></LinearLayout>
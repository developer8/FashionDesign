<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#b3d3d3d3"    android:orientation="vertical"    android:weightSum="6"    tools:context="com.fashion.binge.fashiondesign.OrderDetailActivity">    <include layout="@layout/toolbar"/>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginLeft="15dp"        android:layout_marginRight="15dp"        android:layout_weight="5.8"        android:background="#ffffff"        >        <android.support.v7.widget.RecyclerView            android:id="@+id/recycler_view"            android:layout_width="match_parent"            android:layout_height="match_parent"            />    </RelativeLayout>    <ImageView        android:layout_width="match_parent"        android:layout_height="15dp"        android:layout_marginLeft="15dp"        android:layout_marginRight="15dp"        android:adjustViewBounds="true"        android:contentDescription="@string/address"        android:scaleType="fitXY"        android:src="@drawable/bg"        /></LinearLayout>
<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#40eeeeee"    android:orientation="vertical"    >    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:id="@+id/top_content"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            >            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="5dp"                android:paddingLeft="10dp"                android:paddingTop="10dp"                android:text="Product"                android:textColor="#d3d3d3"                android:textSize="14sp"                />            <TextView                android:id="@+id/product_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="5dp"                android:paddingLeft="10dp"                android:paddingTop="10dp"                android:text="The wild ones"                android:textColor="#9fa8af"                android:textSize="13sp"                android:textStyle="bold"                />        </LinearLayout>        <LinearLayout            android:id="@+id/bottom_content"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/top_content"            android:orientation="horizontal"            >            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="10dp"                android:paddingLeft="10dp"                android:paddingTop="5dp"                android:text="@string/quantity"                android:textColor="#d3d3d3"                android:textSize="14sp"                />            <TextView                android:id="@+id/quantity"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1"                android:paddingBottom="10dp"                android:paddingLeft="10dp"                android:paddingTop="5dp"                android:text="2"                android:textColor="#9fa8af"                android:textSize="13sp"                android:textStyle="bold"                />            <TextView                android:id="@+id/price"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="5dp"                android:paddingLeft="5dp"                android:paddingRight="10dp"                android:paddingTop="10dp"                android:textColor="#243345"                android:textSize="13sp"                android:textStyle="bold"                />        </LinearLayout>        <LinearLayout            android:id="@+id/lower_bottom_content"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:orientation="horizontal"            android:paddingBottom="15dp"            android:paddingTop="15dp"            android:visibility="gone"            >            <Button                android:id="@+id/select_shipping_button"                android:layout_width="wrap_content"                android:layout_height="30dp"                android:background="@drawable/rounded_button"                android:paddingLeft="15dp"                android:paddingRight="15dp"                android:stateListAnimator="@null"                android:textAllCaps="false"                android:textColor="#ffffff"                android:textSize="12sp"                android:textStyle="bold"                />            <ImageView                android:id="@+id/pencil"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_gravity="center"                android:adjustViewBounds="true"                android:maxHeight="12dp"                android:paddingLeft="3dp"                android:src="@mipmap/pencil"                android:visibility="gone"                />            <TextView                android:id="@+id/total_price"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="right"                android:padding="10dp"                android:paddingBottom="10dp"                android:paddingLeft="5dp"                android:paddingTop="10dp"                android:textColor="#000000"                android:textSize="13sp"                android:textStyle="bold"                />        </LinearLayout>    </RelativeLayout></LinearLayout>
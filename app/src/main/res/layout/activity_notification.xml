<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#f8f9fb"    android:orientation="vertical"    tools:context=".Notification">    <include layout="@layout/toolbar"/>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ListView            android:id="@+id/notification_list"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_margin="10dp"            android:divider="#f8f9fb"            android:dividerHeight="10dp"            android:scrollbars="none"/>        <TextView            android:id="@+id/no_notification_content"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:textColor="#54626c"            android:textSize="14sp"            />    </RelativeLayout></LinearLayout>